pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code repository
                git 'https://github.com/osborrero/KarateCobre.git'
            }
        }

        stage('Build') {
            steps {
                // Compile and package the Maven project
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                // Run Karate tests
                sh 'mvn test'
            }
        }

        stage('Generate Report') {
            steps {
                // Generate Karate test report
                sh 'mvn surefire-report:report'
            }
        }
    }

    post {
        always {
            // Archive the generated reports
            archiveArtifacts artifacts: 'target/surefire-reports/*.xml'
        }

        success {
            // If the build is successful, publish the JUnit test results
            junit 'target/surefire-reports/*.xml'
        }
    }
}
