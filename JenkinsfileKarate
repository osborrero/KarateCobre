pipeline {
    agent any
    stages {
        stage('Run Karate Tests') {
            steps {

                // Paso 1: Ejecutar las pruebas de Karate
                sh 'mvn clean test'  // O el comando que utilices para ejecutar tus pruebas de Karate
            }
        }
        stage('Generate Karate Report') {
            steps {
                // Paso 3: Generar el reporte de Karate
                sh 'mvn karate:aggregate'  // O el comando que utilices para generar el reporte de Karate
            }
        }
    }
}
