pipeline {
    agent any

        stage('Run Karate Tests') {
            steps {
                // Ejecutar los escenarios de Karate
                sh './gradlew test'
            }
        }

        stage('Generate Karate Report') {
            steps {
                // Generar el reporte de Karate
                sh './gradlew karateReport'
            }
        }
    }
